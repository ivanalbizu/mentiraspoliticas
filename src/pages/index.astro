---
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Tags from '@components/Tags.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import { YouTube } from '@astro-community/astro-embed-youtube';

const mentiras = await getCollection("mentira");

const mentira = mentiras.find(
  (el) => el.data.featured
) as any;

const tags = [...new Set(mentiras.map((post) => post.data.tags).flat())];
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <h1>Mentirosos</h1>
      <div class="row">
        <div>
          <h2 class="h3">{mentira.data.title}</h2>
          <YouTube id={mentira.data.youtubeId} />
          <a href={`/mentira/${mentira.slug}/`}>
            Ver la mentira <span class="sr-only">{mentira.data.title}</span>
          </a>
        </div>
        <div>
          <h2 class="h3">Trending mentirosos</h2>
          <Tags tags={tags} />
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style lang="scss">
  .row {
    display: grid;
    gap: var(--spacing-sm);

    @media (min-width: 576px) {
      grid-template-columns: 2fr 3fr;
    }
  }
</style>