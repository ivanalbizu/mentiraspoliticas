---
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Iframe from '@components/Iframe.astro';
import VideoBlocks from '@components/VideoBlocks.astro';
import FormattedDate from '@components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

const mentira = (await getCollection('mentira')).find(el => el.data.featured) as any;
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <h1>Mentirosos</h1>
      <a href={`/mentira/${mentira.slug}/`}>
        <h2>{mentira.data.title}</h2>
        <p>
          <FormattedDate date={mentira.data.lieDate} />
        </p>
      </a>
    </main>
    <Footer />
  </body>
</html>
